{
    "name": "weareappa/settings",
    "description": "A model for data-driven settings.",
    "type": "library",
    "require": {
        "php": "^7.4 || ^8.0.2",
        "cakephp/chronos": "^2.0",
        "weareappa/utils": "^2.0",
        "illuminate/support": "^8.0 || ^9.0",
        "illuminate/view": "^8.0 || ^9.0",
        "laravel-doctrine/orm": "^1.7"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.6",
        "laravel-doctrine/fluent": "^1.2",
        "mockery/mockery": "^1.5",
        "phpunit/phpunit": "^8.5 || ^9.5",
        "phpstan/phpstan": "^1.4",
        "phpstan/phpstan-mockery": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Digbang\\Settings\\": "src/"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Digbang\\Settings\\": "tests/"
        }
    },
    "repositories" : [
        { "url": "git@github.com:weareappa/digbang-utils.git", "type": "vcs" }
    ],
    "scripts": {
        "cs": "./vendor/bin/php-cs-fixer fix --allow-risky=yes",
        "stan": "php -d memory_limit=500M ./vendor/bin/phpstan analyse -l 3 -c phpstan.neon src config resources tests",
        "test": "./vendor/bin/phpunit"
    },
    "license": "MIT"
}
